{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 500,
    "title": "World GDP per capita 2020",
    "projection": {"type": "equirectangular"},
    "data": {
        "url": "https://raw.githubusercontent.com/1099238610/global-map-vis/main/json/global.topo.json",
        "format": {"type": "topojson", "feature": "custom.geo"}
    },
    "transform": [{
          "lookup": "properties.name",
          "from": {
            "data": {
              "url": "https://raw.githubusercontent.com/1099238610/global-map-vis/main/data/GDP%20per%20capita.csv"
            },
            "key": "Country",
            "fields": ["GDP_Capita"]
          }
        }, 
        {"calculate": "datum.GDP_Capita + 0.1", "as": "GDP per Capita"}
      ],
    "mark": {"type": "geoshape"},
    "encoding": {
        "color": {
          "field": "GDP per Capita",
          "type": "quantitative",
          "scale": {
            "type":"threshold",
            "domain":[10000,100000,500000],
            "range":["#FADBD8", "#EC7063", "#CB4335", "#943126"]
          }
        },
        "tooltip": [
          {"field": "properties.name", "type": "nominal", "title": "Country"},
          {"field": "GDP_Capita", "type": "quantitative"}
        ]
      }
}